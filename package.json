{
    "name": "@athing/thingy",
    "version": "1.0.0",
    "private": false,
    "description": "The moderation thingy for A Thing.",
    "homepage": "https://github.com/ThingSpace/Thingy",
    "bugs": "https://github.com/ThingSpace/Thingy/issues",
    "repository": {
        "type": "git",
        "url": "https://ThingSpace/Thingy.git"
    },
    "license": "AGPL-3.0-only",
    "author": "Pixelated <https://codemeapixel.dev>",
    "scripts": {
        "build": "bun build src/index.ts",
        "dev": "bun run --watch src/index.ts",
        "format": "prettier --check .",
        "format:fix": "prettier --write .",
        "postinstall": "prisma generate",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "prepare": "husky",
        "start": "bun run dist/index.js"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml}": [
            "prettier --write"
        ],
        "package.json": [
            "sort-package-json"
        ]
    },
    "dependencies": {
        "@elysiajs/swagger": "^1.2.0",
        "@prisma/client": "^5.3.1",
        "bcryptjs": "^2.4.3",
        "crypto": "^1.0.1",
        "elysia": "^1.2.12",
        "openai": "^4.89.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "bun-types": "^1.0.1",
        "commitlint": "^19.6.1",
        "eslint": "^8.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.11",
        "prettier": "^3.0.0",
        "prisma": "^5.3.1",
        "sort-package-json": "^3.2.1",
        "typescript": "^5.2.2"
    }
}
