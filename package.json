{
  "name": "@athing/thingy",
  "description": "The moderation thingy for A Thing.",
  "author": "Pixelated <https://codemeapixel.dev>",
  "license": "AGPL-3.0-only",
  "private": false,
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://ThingSpace/Thingy.git"
  },
  "bugs": "https://github.com/ThingSpace/Thingy/issues",
  "homepage": "https://github.com/ThingSpace/Thingy",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts",
    "start": "bun run dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "postinstall": "prisma generate",
    "prepare": "husky install"
  },
  "dependencies": {
    "@elysiajs/swagger": "^1.2.0",
    "@prisma/client": "^5.3.1",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "elysia": "^1.2.12",
    "openai": "^4.89.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bun-types": "^1.0.1",
    "commitlint": "^19.6.1",
    "eslint": "^8.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.0.0",
    "prisma": "^5.3.1",
    "sort-package-json": "^3.2.1",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  }
}
